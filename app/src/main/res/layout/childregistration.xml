<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"         android:layout_height="fill_parent"         android:overScrollMode="always"         android:isScrollContainer="true"         android:scrollbarAlwaysDrawVerticalTrack="true"         android:scrollbarStyle="outsideInset"         android:scrollbars="vertical">
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"    android:layout_marginLeft="10sp" android:layout_marginRight="0sp"    android:layout_height="wrap_content" android:scrollbars="vertical">
        <LinearLayout android:layout_width="fill_parent" android:paddingBottom="10sp" android:paddingTop="20sp" android:layout_height="wrap_content" android:orientation="horizontal">
            <Button android:id="@+id/cmdMig" android:layout_width="match_parent" android:layout_height="60sp"
                android:textSize="20sp" android:text=" মাইগ্রেশন- ইন "  android:layout_marginBottom="10sp" android:layout_marginLeft="10sp" android:layout_marginRight="10sp"/>
        </LinearLayout>

        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle1">
            <TextView android:id="@+id/lblFormName" android:text="শিশু নিবন্ধন" android:layout_width="310sp" android:layout_height="wrap_content" android:textSize="20sp" />
            <TextView android:text="বাড়ী নং" android:layout_width="90sp" android:layout_height="wrap_content" android:textSize="20sp" />
            <EditText android:id="@+id/lblBari" android:gravity="center" android:text="" android:inputType="text" android:maxLength="4" android:layout_width="100sp" android:layout_height="wrap_content" android:textSize="20sp" style="@style/customEdit"  />

        </LinearLayout>


        <LinearLayout android:id="@+id/secChildId" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle0">

            <TextView android:id="@+id/VlblHH" android:text="খানা নং" android:layout_width="130sp" android:layout_height="wrap_content" android:textSize="20sp" />
            <EditText android:id="@+id/txtHH" android:maxLength="2" android:layout_width="100sp" android:inputType="number" android:layout_height="wrap_content" style="@style/customEdit" android:layout_marginRight="10sp" android:textSize="20sp" />

            <TextView android:id="@+id/VlblSNo" android:text="সদস্য নং" android:layout_marginLeft="60sp" android:layout_width="100sp" android:layout_height="wrap_content" android:textSize="20sp" />
            <EditText android:id="@+id/txtSNo" android:maxLength="2" android:layout_width="100sp" android:inputType="number" android:layout_height="wrap_content" style="@style/customEdit" android:layout_marginRight="10sp" android:textSize="20sp" />
        </LinearLayout>
        <View android:layout_height="1dip" android:layout_width="fill_parent" android:background="#CCCCCC" />
        <LinearLayout android:id="@+id/secCID" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle0">

            <TextView android:id="@+id/VlblCID" android:text="চলতি ID নং" android:layout_width="130sp" android:layout_height="wrap_content" android:textSize="20sp" />
            <EditText android:id="@+id/txtCID" android:maxLength="11" android:layout_width="160sp" android:inputType="number" android:layout_height="wrap_content" style="@style/customEdit" android:layout_marginRight="10sp" android:textSize="20sp" />
            <TextView android:id="@+id/VlblPID" android:text="স্থায়ী ID নং" android:layout_width="100sp" android:layout_height="wrap_content" android:textSize="20sp" />
            <EditText android:id="@+id/txtPID" android:maxLength="8" android:layout_width="140sp" android:inputType="number" android:layout_height="wrap_content" style="@style/customEdit" android:layout_marginRight="10sp" android:textSize="20sp" />
        </LinearLayout>
        <View android:layout_height="1dip" android:layout_width="fill_parent" android:background="#CCCCCC" />
        <LinearLayout android:id="@+id/secName" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle0">

            <TextView android:id="@+id/VlblName" android:text="নাম" android:layout_width="130sp" android:layout_height="wrap_content" android:textSize="20sp" />
            <EditText android:id="@+id/txtName" android:maxLength="50" android:layout_width="250sp" android:inputType="textCapCharacters" android:layout_height="wrap_content" style="@style/customEdit" android:layout_marginRight="10sp" android:textSize="20sp" />
        </LinearLayout>
        <View android:layout_height="1dip" android:layout_width="fill_parent" android:background="#CCCCCC" />
        <LinearLayout android:id="@+id/secSex" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle0">

            <TextView android:id="@+id/VlblSex" android:text="সেক্স" android:layout_width="130sp" android:layout_height="wrap_content" android:textSize="20sp" />
            <RadioGroup android:id="@+id/rdogrpSex" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="20sp">

                <RadioButton android:paddingRight="10dp" android:textSize="20sp" android:id="@+id/rdoSex1" android:text="ছেলে" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                <RadioButton android:paddingRight="10dp" android:textSize="20sp" android:id="@+id/rdoSex2" android:text="মেয়ে"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>
            </RadioGroup>
        </LinearLayout>
        <View android:layout_height="1dip" android:layout_width="fill_parent" android:background="#CCCCCC" />
        <LinearLayout android:id="@+id/secBdate" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle0">

            <TextView android:id="@+id/VlblBdate" android:text="জন্ম তারিখ" android:layout_width="130sp" android:layout_height="wrap_content" android:textSize="20sp" />
            <EditText android:id="@+id/dtpBdate" android:layout_width="120sp" android:inputType="text" android:layout_height="wrap_content" android:focusable="false" style="@style/customEdit" android:layout_marginRight="10sp" android:textSize="20sp" />
            <ImageButton android:id="@+id/btnBdate" android:layout_width="40sp" android:layout_height="40sp" android:src="@drawable/calender" android:layout_gravity="center" />
            <TextView android:id="@+id/VlblAgeM1" android:text="   বয়স" android:layout_width="80sp" android:layout_height="wrap_content" android:textSize="20sp" />
            <TextView android:id="@+id/txtAgeM" android:maxLength="2" android:layout_width="60sp" android:textAlignment="center" android:inputType="text" android:layout_height="wrap_content" style="@style/customEdit" android:layout_marginRight="10sp" android:textSize="20sp" />
            <TextView android:id="@+id/VlblAgeM" android:text="" android:layout_width="wrap_content" android:layout_marginLeft="10sp" android:layout_height="wrap_content" android:textSize="20sp" />
        </LinearLayout>
        <View android:layout_height="1dip" android:layout_width="fill_parent" android:background="#CCCCCC" />
        <LinearLayout android:id="@+id/secMoName" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle0">

            <TextView android:id="@+id/VlblMoName" android:text="মায়ের নাম " android:layout_width="130sp" android:layout_height="wrap_content" android:textSize="20sp" />
            <EditText android:id="@+id/txtMoName" android:maxLength="50" android:layout_width="250sp" android:inputType="textCapCharacters" android:layout_height="wrap_content" style="@style/customEdit" android:layout_marginRight="10sp" android:textSize="20sp" />
        </LinearLayout>
        <View android:layout_height="1dip" android:layout_width="fill_parent" android:background="#CCCCCC" />
        <LinearLayout android:id="@+id/secFaName" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle0">

            <TextView android:id="@+id/VlblFaName" android:text="পিতার নাম" android:layout_width="130sp" android:layout_height="wrap_content" android:textSize="20sp" />
            <EditText android:id="@+id/txtFaName" android:maxLength="50" android:layout_width="250sp" android:inputType="textCapCharacters" android:layout_height="wrap_content" style="@style/customEdit" android:layout_marginRight="10sp" android:textSize="20sp" />
        </LinearLayout>
        <View android:layout_height="1dip" android:layout_width="fill_parent" android:background="#CCCCCC" />
        <LinearLayout android:id="@+id/secMoPNO" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle0">

            <TextView android:id="@+id/VlblMoPNO" android:text="মায়ের স্থায়ী ID নং" android:layout_width="220sp" android:layout_height="wrap_content" android:textSize="20sp" />
            <EditText android:id="@+id/txtMoPNO" android:maxLength="8" android:layout_width="160sp" android:inputType="number" android:layout_height="wrap_content" style="@style/customEdit" android:layout_marginRight="10sp" android:textSize="20sp" />
        </LinearLayout>
        <View android:layout_height="1dip" android:layout_width="fill_parent" android:background="#CCCCCC" />
        <LinearLayout android:id="@+id/secEnType" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle0">

            <TextView android:id="@+id/VlblEnType" android:text="নিবন্ধনের ধরণ" android:layout_width="220sp" android:layout_height="wrap_content" android:textSize="20sp" />
            <Spinner android:id="@+id/spnEnType" android:drawSelectorOnTop="true" android:layout_width="300sp" android:layout_height="wrap_content" android:layout_weight="0" android:prompt="@string/planet_prompt" android:textSize="20sp" />
        </LinearLayout>
        <View android:layout_height="1dip" android:layout_width="fill_parent" android:background="#CCCCCC" />
        <LinearLayout android:id="@+id/secVStDate" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle0">

            <TextView android:id="@+id/VlblVStDate" android:text="প্রথম পরিদর্শনের তারিখ" android:layout_width="220sp" android:layout_height="wrap_content" android:textSize="20sp" />
            <EditText android:id="@+id/dtpVStDate" android:layout_width="120sp" android:inputType="text" android:layout_height="wrap_content" android:focusable="false" style="@style/customEdit" android:layout_marginRight="10sp" android:textSize="20sp" />
            <ImageButton android:id="@+id/btnVStDate" android:layout_width="40sp" android:layout_height="40sp" android:src="@drawable/calender" android:layout_gravity="center" />
        </LinearLayout>
        <View android:layout_height="1dip" android:layout_width="fill_parent" android:background="#CCCCCC" />

        <LinearLayout android:id="@+id/secPhone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle0">

            <TextView android:id="@+id/VlblPhone" android:text="ফোন নম্বর" android:layout_width="130sp" android:layout_height="wrap_content" android:textSize="20sp" />
            <EditText android:id="@+id/txtPhone" android:maxLength="50" android:layout_width="250sp" android:inputType="phone" android:layout_height="wrap_content" style="@style/customEdit" android:layout_marginRight="10sp" android:textSize="20sp" />
        </LinearLayout>
        <View android:layout_height="1dip" android:layout_width="fill_parent" android:background="#CCCCCC" />

        <LinearLayout android:layout_width="fill_parent" android:paddingBottom="10sp" android:paddingTop="20sp" android:layout_height="wrap_content" android:orientation="horizontal">
            <Button android:id="@+id/cmdSave" android:layout_width="match_parent" android:layout_height="60sp"
                android:textSize="20sp" android:text=" Save "  android:layout_marginBottom="10sp" android:layout_marginLeft="10sp" android:layout_marginRight="10sp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>