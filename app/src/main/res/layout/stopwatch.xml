<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:padding="4dip" style="@style/customEdit"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <LinearLayout android:layout_width="wrap_content" android:background="#F3F3F3" android:paddingTop="5sp" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_gravity="center">
        <TextView android:id="@+id/title" android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timer (Minutes)"
            android:textSize="25sp" />
    </LinearLayout>
    <View android:layout_height="1dip" android:layout_width="fill_parent" android:background="#CCCCCC" />
    <LinearLayout android:layout_width="wrap_content" android:background="#F3F3F3" android:paddingTop="5sp" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_gravity="center">
        <RadioGroup android:id="@+id/rdogrpM" android:orientation="horizontal" android:layout_width="0dp" android:layout_height="wrap_content" android:textSize="20sp"
            android:layout_weight="1">
            <RadioButton android:paddingRight="20dp" android:textSize="30sp" android:id="@+id/rdo1m" android:text="1" android:layout_height="wrap_content" android:layout_width="wrap_content" android:checked="true"/>
            <!--<RadioButton android:paddingRight="20dp" android:textSize="25sp" android:id="@+id/rdo2m" android:text="2"  android:layout_height="wrap_content" android:layout_width="wrap_content" />-->
            <RadioButton android:paddingRight="10dp" android:textSize="30sp" android:id="@+id/rdo3m" android:text="3" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
        </RadioGroup>
    </LinearLayout>

    <Chronometer android:id="@+id/chronometer" android:background="#FFFFFF" android:textSize="70sp" android:textColor="#FF0000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:paddingBottom="0sp" android:paddingLeft="30sp" android:paddingRight="30sp"
        android:paddingTop="0sp" android:layout_marginLeft="20sp" android:layout_marginRight="20sp" />

    <View android:layout_height="1dip" android:layout_width="fill_parent" android:background="#CCCCCC" />
    <LinearLayout android:layout_width="wrap_content" android:layout_marginTop="10sp" android:background="#F3F3F3" android:paddingTop="5sp" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_gravity="center">
       	<Button android:id="@+id/cmdStart" android:background="@drawable/button_style" android:layout_width="100sp" android:layout_height="35sp"
       			android:textSize="16sp" android:text=" Start "  android:layout_marginBottom="10sp" android:layout_marginLeft="5sp"/>

       	<Button android:id="@+id/cmdStop" android:layout_marginLeft="30sp" android:background="@drawable/button_style" android:layout_width="100sp" android:layout_height="35sp"
       			android:textSize="16sp" android:text=" Stop "  android:layout_marginBottom="10sp" android:layout_marginRight="20sp"/>       	
       	</LinearLayout>

       
</LinearLayout>